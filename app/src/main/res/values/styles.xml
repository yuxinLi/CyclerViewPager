<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BannerIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">7dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:gravity">bottom</item>
        <item name="ci_gravity">center_vertical|center</item>
        <item name="ci_width">3dp</item>
        <item name="ci_height">3dp</item>
        <item name="ci_margin">3dp</item>
        <item name="ci_animator">@animator/banner_indicator</item>
        <item name="ci_drawable">@drawable/bg_circle_green</item>
        <item name="ci_drawable_unselected">@drawable/bg_circle_white</item>
    </style>

</resources>
